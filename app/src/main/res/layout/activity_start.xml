<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:id="@+id/activity_start"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/start_textView"
        android:background="#80000000"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_account"
            android:id="@+id/no_account_button"
            android:textColor="#fff"
            android:backgroundTint="@android:color/background_dark"
            android:layout_above="@+id/sign_up_button"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:id="@+id/sign_up_button"
            android:backgroundTint="@android:color/background_dark"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="83dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slogan"
            android:id="@+id/slogan"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:fontFamily="Segoe UI Light" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ask_account"
            android:id="@+id/ask_account"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/logoText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:id="@+id/sign_in"
            android:textStyle="bold"
            android:layout_alignTop="@+id/ask_account"
            android:layout_toEndOf="@+id/logoText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q"
            android:id="@+id/logoText"
            android:textSize="100dp"
            android:textColor="@color/greenQ"
            android:layout_marginBottom="68dp"
            android:layout_above="@+id/slogan"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>