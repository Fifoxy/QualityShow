<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:layout_marginBottom="5dp">


    <CheckBox
        android:id="@+id/child_list_item_episode_viewd_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/seen"
        android:layout_gravity="right"
        android:textColor="@android:color/black"
        android:shadowColor="@color/purple" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_marginTop="3dp"
        android:textStyle=""
        android:layout_gravity="left"
        android:text="@string/overview"
        android:textSize="11dp"
        android:textAllCaps="true"
        android:textColor="@color/title_gray"
        android:id="@+id/overview_title" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/synopsys"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:id="@+id/synopsys_episode"
        android:background="@drawable/bordertext"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="11dp"
        android:textAllCaps="true"
        android:textColor="@color/title_gray"
        android:layout_marginTop="-3dp"
        android:padding="15dp"
        android:id="@+id/date_episode"
        android:background="@drawable/bordertext"
        android:drawableLeft="@drawable/ic_access_time"
        android:drawablePadding="5dp"/>

</LinearLayout>