<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="98dp"
        android:layout_height="147dp"
        android:id="@+id/related_image_view"
        android:layout_below="@+id/related_name_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/related_name_view"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="Serie's name"
        android:textSize="10sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/related_image_view"
        android:layout_alignEnd="@+id/related_image_view"
        android:textAlignment="center"
        android:singleLine="true" />
</RelativeLayout>